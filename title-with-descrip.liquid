{% schema %}
{
  "name": "Title with Description",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Title",
      "default": "Your Title Here"
    },
    {
      "type": "textarea",
      "id": "section_description",
      "label": "Description",
      "default": "Your description goes here. Add any additional details about your content."
    },
    {
      "type": "select",
      "id": "title_heading",
      "label": "Heading Level",
      "options": [
        { "value": "h1", "label": "H1" },
        { "value": "h2", "label": "H2" },
        { "value": "h3", "label": "H3" },
        { "value": "h4", "label": "H4" },
        { "value": "h5", "label": "H5" },
        { "value": "h6", "label": "H6" }
      ],
      "default": "h2"
    },
    {
      "type": "range",
      "id": "title_font_size",
      "label": "Title Font Size (px)",
      "default": 24,
      "min": 12,
      "max": 72,
      "step": 1
    },
    {
      "type": "range",
      "id": "description_font_size",
      "label": "Description Font Size (px)",
      "default": 16,
      "min": 12,
      "max": 48,
      "step": 1
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top (px)",
      "default": 20,
      "min": 0,
      "max": 100,
      "step": 5
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom (px)",
      "default": 20,
      "min": 0,
      "max": 100,
      "step": 5
    },
    {
      "type": "range",
      "id": "padding_left",
      "label": "Padding Left (px)",
      "default": 20,
      "min": 0,
      "max": 100,
      "step": 5
    },
    {
      "type": "range",
      "id": "padding_right",
      "label": "Padding Right (px)",
      "default": 20,
      "min": 0,
      "max": 100,
      "step": 5
    }
  ],
  "presets": [
    {
      "name": "Title with Description",
      "category": "Text"
    }
  ]
}
{% endschema %}

<div 
  class="title-with-description" 
  style="padding-top: {{ section.settings.padding_top }}px; 
         padding-bottom: {{ section.settings.padding_bottom }}px; 
         padding-left: {{ section.settings.padding_left }}px; 
         padding-right: {{ section.settings.padding_right }}px;">
  
  <{{ section.settings.title_heading }} 
    class="title-with-description__title" 
    style="font-size: {{ section.settings.title_font_size }}px;">
    {{ section.settings.section_title }}
  </{{ section.settings.title_heading }}>
  
  <p 
    class="title-with-description__description" 
    style="font-size: {{ section.settings.description_font_size }}px;">
    {{ section.settings.section_description }}
  </p>
</div>

<style>
.title-with-description {
  width: 100%;
  text-align: center;
}

.title-with-description__title {
  margin-bottom: 10px;
  font-weight: bold; /* Adjust as needed */
}

.title-with-description__description {
  color: #555; /* Default description text color */
  line-height: 1.5;
}
</style>
